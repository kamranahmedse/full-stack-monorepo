{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting"
  ],
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "at any time"
  ],
  "constraints": {
    "pnpm": "7"
  },
  "packageRules": [
    {
      "groupName": "definitelyTyped",
      "automerge": "true",
      "packagePatterns": [
        "^@types/"
      ],
      "updateTypes": [
        "patch",
        "minor"
      ],
      "schedule": [
        "before 8am on Wednesday"
      ]
    },
    {
      "groupName": "turbo-init",
      "commitMessageTopic": "turbo-init",
      "matchPaths": [
        "package.json"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ]
    },
    {
      "groupName": "appsgenel",
      "commitMessageTopic": "appsgenel",
      "matchPaths": [
        "apps/email/**",
        "apps/storybook-vue/**"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ]
    },
    {
      "groupName": "packages",
      "commitMessageTopic": "packages",
      "matchPaths": [
        "packages/**"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "packages",
      "commitMessageTopic": "packages",
      "matchPaths": [
        "packages/**"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "vue",
      "commitMessageTopic": "vue",
      "matchPaths": [
        "apps/vue-mobile/**",
        "apps/vue-web/**"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "vue",
      "commitMessageTopic": "vue",
      "matchPaths": [
        "apps/vue-mobile/**",
        "apps/vue-web/**"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "nestjs",
      "commitMessageTopic": "nestjs",
      "matchPaths": [
        "apps/nestjs/**"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "nestjs",
      "commitMessageTopic": "nestjs",
      "matchPaths": [
        "apps/nestjs/**"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "excludePackageNames": [
        "nanoid"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "matchPaths": [
        "packages/**"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "matchDatasources": [
        "npm"
      ],
      "groupName": "packages dependencies",
      "rangeStrategy": "replace"
    }
  ],
  "ignoreDeps": [
    "@maizzle/cli"
  ]
}