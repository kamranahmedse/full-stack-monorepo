{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rebaseWhen": "conflicted",
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "before 6am on the first day of the month"
  ],
  "packageRules": [
    {
      "groupName": "definitelyTyped",
      "automerge": "true",
      "packagePatterns": [
        "^@types/"
      ],
      "updateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "turbo-init",
      "commitMessageTopic": "turbo-init",
      "matchPaths": [
        "package.json"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ]
    },
    {
      "groupName": "apps-general",
      "commitMessageTopic": "apps-general",
      "matchPaths": [
        "apps/email/**",
        "apps/storybook-vue/**"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ]
    },
    {
      "groupName": "packages",
      "commitMessageTopic": "packages",
      "matchPaths": [
        "packages/**"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "packages",
      "commitMessageTopic": "packages",
      "matchPaths": [
        "packages/**"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "vue",
      "commitMessageTopic": "vue",
      "matchPaths": [
        "apps/vue-mobile/**",
        "apps/vue-web/**"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "vue",
      "commitMessageTopic": "vue",
      "matchPaths": [
        "apps/vue-mobile/**",
        "apps/vue-web/**"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "nestjs",
      "commitMessageTopic": "nestjs",
      "matchPaths": [
        "apps/nestjs/**"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "nestjs",
      "commitMessageTopic": "nestjs",
      "matchPaths": [
        "apps/nestjs/**"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "excludePackageNames": [
        "nanoid"
      ],
      "matchDatasources": [
        "npm"
      ]
    }
  ],
  "ignoreDeps": [
    "@maizzle/cli"
  ]
}